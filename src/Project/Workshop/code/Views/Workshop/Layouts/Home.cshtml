@using Canvas.Project.Workshop
@using Sitecore.Mvc.Presentation
@using Sitecore.Data.Fields
@using Sitecore.Resources.Media

@{
    var renderingItem = RenderingContext.Current.Rendering.Item;
    var heroText = renderingItem.Fields[Templates.HomePage.Fields.HeroText];
    var heroImageField = (ImageField) renderingItem.Fields[Templates.HomePage.Fields.HeroImage];
    var heroImage = heroImageField.MediaItem != null ? MediaManager.GetMediaUrl(heroImageField.MediaItem) : string.Empty;
    var body = renderingItem.Fields[Templates.HomePage.Fields.Body];
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0"
    />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Home</title>
    <script src="~/Assets/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/Assets/css/bootstrap.min.css" />
  </head>
  <body>
    <div class="container">
      <nav class="navbar navbar-expand-lg">
          <div class="container-fluid">
            <a class="navbar-brand" href="#">
              <img
                src="/Assets/img/sc-logo.png"
                alt="Logo"
                width="35"
                class="d-inline-block align-text-top"
              />Sitecore Workshop</a
            >
            <button
              class="navbar-toggler"
              type="button"
              data-bs-toggle="collapse"
              data-bs-target="#navbarNav"
              aria-controls="navbarNav"
              aria-expanded="false"
              aria-label="Toggle navigation"
            >
              <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav">
                <li class="nav-item">
                  <a class="nav-link active" aria-current="page" href="#">Home</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link" href="#">Contact</a>
                </li>
                <li class="nav-item">
                  <a class="nav-link disabled">Even More Links</a>
                </li>
              </ul>
            </div>
          </div>
        </nav>
      <div
        class="p-5 mb-4 bg-light rounded-3"
        style="
          background-image: url('@heroImage');
          background-size: cover;
        "
      >
        <div class="container-fluid py-5">
          <h1 class="display-5 fw-bold text-white">@heroText</h1>
          <p class="col-md-8 fs-4 text-white pt-4">
            @body
          </p>
        </div>
      </div>
      <footer class="pt-3 mt-4 text-muted border-top">© 2023 - Some more footer stuff</footer>
    </div>
  </body>
</html>
